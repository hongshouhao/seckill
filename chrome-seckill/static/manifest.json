{
  "name": "秒杀助手",
  "description": "购物秒杀辅助",
  "version": "0.0.3",
  "icons": {
    "16": "image/seckill-16.png",
    "48": "image/seckill-48.png",
    "128": "image/seckill-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "notifications",
    "activeTab",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["js/secKill.js"]
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://sapi.k780.com/; object-src 'self'",
  "browser_action": {
    "default_icon": "image/seckill-16.png",
    "default_title": "秒杀助手",
    "default_popup": "index.html"
  },
  "manifest_version": 2,
  "update_url": "http://www.google.com/"
}
